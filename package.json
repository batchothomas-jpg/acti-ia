{
  "name": "acti-ia",
  "version": "1.0.0",
  "description": "Application Acti-IA",
  "author": "Thomas Batcho",
  "main": "electron/main.js",
  "scripts": {
    "build:frontend": "npm run build --prefix frontend",
    "build:win": "npm run build:frontend && npx electron-builder --win --x64",
    "build": "npm run build:win"
  },
  "build": {
    "appId": "com.actiia.app",
    "productName": "Acti-IA",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "electron/icon.ico"
    }
  },
  "devDependencies": {
    "vite": "^7.3.1"
  }
}
